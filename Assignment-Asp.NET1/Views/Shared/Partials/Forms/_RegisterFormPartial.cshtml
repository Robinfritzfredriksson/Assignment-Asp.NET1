@using Assignment_Asp.NET1.Models.Forms;
@model RegisterForm



<form asp-action="Index" method="post" asp-route-ReturnUrl="@Model.ReturnUrl">
    <div class="form-group">
        <div class="form-label">
            <label asp-for="FirstName" class="control-label">First Name *</label>
        </div>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <div class="form-label">
            <label asp-for="LastName" class="control-label">Last Name *</label>
        </div>
        <input asp-for="LastName" class="form-control" />
    </div>
        <div class="form-group">
        <div class="form-label">
            <label asp-for="Company" class="control-label">Company</label>
        </div>
        <input asp-for="Company" class="form-control" />
    </div>
    <div class="form-group">
        <div class="form-label">
            <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
        </div>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <div class="form-label">
            <label asp-for="StreetName" class="control-label">Street Name</label>
        </div>
        <input asp-for="StreetName" class="form-control" />
    </div>
    <div class="form-group">
        <div class="form-label">
            <label asp-for="PostalCode" class="control-label">Postal Code</label>
        </div>
        <input asp-for="PostalCode" class="form-control" />
    </div>

    <div class="form-group">
        <div class="form-label">
            <label asp-for="City" class="control-label">City</label>
        </div>
        <input asp-for="City" class="form-control" />
    </div>



    <div class="form-group">
        <div class="form-label">
            <label asp-for="Email" class="control-label">E-mail *</label>
            <a asp-controller="Register" asp-action="Index"></a>
        </div>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <div class="form-label d-flex justify-content-between">
            <label asp-for="Password" class="control-label">Password *</label>
            <a asp-controller="Forgot" asp-action="Index"></a> <!--<a href="/">MÅSTE GÖRA EN CONTROLLER</a> -->
        </div>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <div class="form-label d-flex justify-content-between">
            <label asp-for="ConfirmPassword" class="control-label">Password *</label>
        </div>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>



    <button class="button-style">Submit</button>

</form>